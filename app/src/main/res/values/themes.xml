<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PoseMatching" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_main</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blush_main</item>
        <item name="colorSecondaryVariant">@color/blush_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/blush_light</item>
        <item name="android:colorBackground">@color/blush_light</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:fontFamily">@font/akaya_kanadaka_regular</item>
    </style>

    <style name="Theme.PoseMatching.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PoseMatching.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PoseMatching.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>